// mostly taken from http://tomoprogramming.blogspot.com/2013/08/simple-tutorial-for-chrome-extension.html
{
  "manifest_version": 2,
  
  "name": "Quick link",
  "description": "When text is selected and right-clicked, there is an option to 'Quick link,' going to the link provided by Google's 'I'm feeling lucky'",
  "version": "0.0.1",
  "permissions": [
    "contextMenus"
  ],
  
  "background": {
    "persistent": false,
    "scripts": [
      "onrightclick.js"
    ]
  }
}